#!/bin/bash -li

conf=$HOME/.screens
screen="$HOME/bin/screen -s -/bin/bash"

screens=`cat $conf`

function screen_running () {
    screen -ls | grep -q "\.$1[^a-zA-Z0-9]";
}

for path in $screens; do
    name=${path##*/}
    [[ -z "$name" ]] && name=${path##*/}

    if ( ! screen_running "$name" ); then
        pushd $path  > /dev/null &&
        echo "starting screen in $path" &&
        $screen -fn -dmS $name
        popd > /dev/null
    fi
done